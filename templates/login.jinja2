<html lang="en">
  <meta charset="UTF-8">
  <link rel="apple-touch-icon" sizes="180x180" href="/static/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon-16x16.png">
  <link rel="manifest" href="/static/site.webmanifest">
  <meta name="referrer" content="no-referrer">
  <title>Login</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/static/w3.css">
  <link rel="stylesheet" href="/static/font-awesome-4.7.0/css/font-awesome.min.css">
  {% block head %}
  {% endblock %}
  <style>
    pre { white-space: pre-wrap }
    a { text-decoration: none }
    .truncate { white-space: nowrap; overflow: hidden; text-overflow: ellipsis}
    li:hover { opacity: 0.6; }
    .image:hover { opacity: 0.6; }
    p,h1,h2,h3,h4,h5,h6 { font-family: Roboto Condensed, sans-serif !important; }
    {% block style %}
    {% endblock %}
  </style>

  <body>
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
      <div style="width: 300px;">
        <h2>
          Catboard
        </h2>
        <br/>
        <form method="post">
          <Label>Username:
            <input class="w3-input w3-light-gray w3-round" name="username">
          </label>

          <br/>

          <label>Password:
            <input class="w3-input w3-light-gray w3-round" name="password" type="password">
          </label>

          <p>
            <button class="w3-btn w3-blue w3-round" type="submit">Log in</button>
          </p>

        </form>
      </div>
    </div>
  </body>
</html>
