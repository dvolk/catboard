{% extends 'base.jinja2' %}

{% block head %}
<style>
 .calendar {
     display: grid;
     grid-template-columns: repeat(7, 1fr);
     grid-gap: 4px;
 }

 /* Mobile view: one column */
 @media screen and (max-width: 600px) {
     .calendar {
         grid-template-columns: 1fr;
     }

     .header {
         display: none; /* Hide headers */
     }
 }
</style>
{% endblock %}

{% block content %}
<header class="w3-container w3-indigo">
    <h2>
        {{ icon('calendar') }} Calendar day
    </h2>
</header>

<div class="w3-main" style="padding-bottom: 100px;">
    <form method="POST">
        <div class="w3-container w3-padding w3-white">
            <br/>
        <textarea name="cal_text" rows="5" class="w3-input w3-white w3-border">{% if calday %}{{ calday.text }}{% endif %}</textarea>
        <p>
            <button type="submit" name="submit" class="w3-blue w3-round w3-button">Submit</button>
        </p>
    </div>
</div>

{% endblock %}
